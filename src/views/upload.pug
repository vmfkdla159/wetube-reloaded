extends layout.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="post")
        input(type="text", name="title", placeholder="Enter your Video title", required maxlength="80")
        input(type="text", name="description", placeholder="Enter your Video description", required minlength="20")
        input(type="text", name="hashtag", placeholder="Hashtag. separated by comma.", required)
        input(type="submit", value="Upload Video") 